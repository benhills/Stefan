@article{Weiss2004,
abstract = {Recent investigations of crevassing on alpine glaciers and ice shelves have been based on linear elastic fracture mechanics (LEFM). However, LEFM is unable to explain some aspects of crevasse formation such as the initiation of crevasse propagation from crystal-scale (mm) microcracks, the slow propagation of large fractures in ice shelves, and the acceleration of crevasse opening before breaking of the ice terminus. Here another mechanism to account for these observations is proposed: subcritical crevassing. Subcritical crack growth, documented in many materials though not yet explored in ice, is characterized by a crack velocity that scales as a power of the tensile stress intensity factor, but is much less than that associated with critical crack propagation. This mechanism allows crevasse propagation from mm-scale microcracks at velocities much lower than body wave speeds, and explains crevasse-opening accelerations in a natural way. Subcritical crevassing is theoretically explored for several simplified situations but is limited by a lack of available data on crevasse evolution.},
author = {Weiss, J{\'{e}}r{\^{o}}me},
doi = {10.3189/172756504781830240},
file = {:home/ben/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Weiss - 2004 - Subcritical crack propagation as a mechanism of crevasse formation and iceberg calving.pdf:pdf},
issn = {00221430},
journal = {Journal of Glaciology},
number = {168},
pages = {109--115},
title = {{Subcritical crack propagation as a mechanism of crevasse formation and iceberg calving}},
volume = {50},
year = {2004}
}
@article{Weller,
abstract = {The heat energy fluxes at an ice surface in the Antarctic coastal ablation zone were measured close to the A. N. A. R. E. station Mavvson and a Fourier analysis was carried out on the monthly mean values of all components. The energy transfer in the ice was measured and analysed by computing the amplitudes of the radiative and conductive heat fluxes at various depths in the ice. In the surface heat budget the eddy heat transfer to the surface is the largest budget component with an annual mean value of 60 cal cm" 2 day" 1 and an annual amplitude of 50 cal cm{\~{}}' 2 day" 1 balancing the annual mean heat energy loss of 22 cal cm"" 2 day" 1 by radiation and 38 cal cm" 2 day" 1 by evaporation and melting at the ice surface. The annual amplitude of the conducted heat flux through the surface of the ice resulting from changes in the net heat storage is approximately 30 cal cm" 2 day"* 1 and one third of the amplitude of the radiative net short wave flux through the surface. The annual temperature wave at the surface and the absorbed radiation contribute about equally to net changes in stored heat. At four metres depth the amplitude of the radiative flux is one third of that of the conductive flux and the contribution of absorbed radiation to net changes in stored heat is still 15 per cent. The mean annual value of the absorbed short wave radiation is 90 cal cm" 2 day" 1 and heat losses by conduction due to the presence of a mean annual temperature gradient in the ice have equal magnitude but apposite sign to give zero annual net heat storage in the ice. Finally a comparison is carried out of the Mawson results with five other Antarctic heat budget studies in different wind regions and over ice and snow of varying optical and thermal properties. R{\'{E}}SUM{\'{E}} Les flux d'{\'{e}}nergie calorifique sur la surface de la glace dans une zone c{\^{o}}ti{\`{e}}re d'ablation de l'Antarctique ont {\'{e}}t{\'{e}} mesur{\'{e}}s tout pr{\`{e}}s de la station A.N.A.R.E. de Mawson et une analyse de Fourier a {\'{e}}t{\'{e}} faite des valeurs moyennes mensuelles de tous les composantes. Le transfert d'{\'{e}}nergie dans la glace a {\'{e}}t{\'{e}} mesur{\'{e}} et analys{\'{e}} en computant les amplitudes des flux calorifiques par radiation et conductibilit{\'{e}} {\`{a}} diverses profondeurs de la glace. Dans le bilan calorifique de surface, le transfert calorifique tourbillonnaire {\`{a}} la surface est le poste le plus important du bilan, avec une valeur annuelle moyenne de 60 cal cm" 2 jour" 1 et une amplitude annuelle de 50 cal cm" 2 jour"" 1 balan{\c{c}}ant la moyenne annuelle de la perte d'{\'{e}}nergie calorifique de 22 cal cm" 2 jour" 1 par radiation et de 38 cal cm" 2 jour" 1 par evaporation et fusion {\`{a}} la surface de la glace. L'amplitude annuelle du flux calorifique annuel par conductibilit{\'{e}} {\`{a}} travers la surface de la glace, r{\'{e}}sultant de changements dans l'emmagasincment net de chaleur est approximativement de 30 cal cm" 2 jour" 1 et un tiers de l'amplitude du flux net par radiations par ondes courtes {\`{a}} travers la surface. L'onde annuelle de temp{\'{e}}rature {\`{a}} la surface et la radiation absorb{\'{e}}e contribuent {\`{a}} peu pr{\`{e}}s {\'{e}}galement aux changements nets de la chaleur emmagasin{\'{e}}e. A quatre m{\`{e}}tres de profondeur, l'amplitude du flux par radiation vaut un tiers de celui du flux par conductibilit{\'{e}} et la contribution de la radiation absorb{\'{e}}e au changement net de la chaleur emmagasin{\'{e}}e est encore 15{\%}. La valeur moyenne annuelle de la radiation par ondes courtes absorb{\'{e}}e est de 90 cal cm" 2 jour" 1 et les pertes de chaleur par conductibilit{\'{e}} due {\`{a}} l'existence d'un gradient moyen annuel de temp{\'{e}}rature dans la glace a la m{\^{e}}me grandeur mais un signe oppos{\'{e}}, de fa{\c{c}}on {\`{a}} donner un emmagasinement net annuel nul dans la glace. Finalement, on a fait une comparaison des r{\'{e}}sultats de Mawson avec cinq autres {\'{e}}tudes de budgets calorifiques dans l'Antarctique dans des r{\'{e}}gions de vent diff{\'{e}}rentes et sur de la glace et de la neige pr{\'{e}}sentant des propri{\'{e}}t{\'{e}}s optiques et thermales variables.},
