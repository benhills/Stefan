@article{Zoet2013,
abstract = {Subglacial stick-slip motion speeds erosion by hydrofracturing and in other ways, as determined from analysis of the growing body of field data. Microearthquake monitoring commonly detects subglacial earthquakes, likely mostly from stick-slip motion of debris-laden ice over bedrock. Source parameters show that many quakes cause enough motion to greatly lower water pressure in cavities on the lee sides of bedrock steps. We calculate that the resulting expansion of higher-pressure water in nearby cracks promotes hydrofracturing, with even relatively small cracks growing unstably under thick glaciers and all cracks growing faster than for aseismic behavior. This mechanism also helps generate the step-like topography favoring block plucking. This stick-slip glacier-erosion hypothesis suggests that the erosion rate will increase with ice thickness as well as basal shear stress, ice-flow velocity, and water supply.},
author = {Zoet, L. K. and Alley, R. B. and Anandakrishnan, S. and Christianson, K.},
doi = {10.1130/G33624.1},
file = {:home/ben/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Zoet et al. - 2013 - Accelerated subglacial erosion in response to stick-slip motion.pdf:pdf},
issn = {00917613},
journal = {Geology},
pages = {159--162},
title = {{Accelerated subglacial erosion in response to stick-slip motion}},
volume = {41},
year = {2013}
}
@article{Zoet2012,
abstract = {Between debris-laden glacial ice and bedrock, basal seismicity can$\backslash$ndevelop that yields information about bed properties(1,2), stress$\backslash$ndistribution(3), outburst flooding(4), and crevassing and calving(5-7).$\backslash$nBasal seismicity in response to glacial motion is linked to variations$\backslash$nin both stress and lubrication of bedrock by water and till(8,9).$\backslash$nHere we analyse data from the Transantarctic Mountains Seismic Experiment$\backslash$narray in 2002-2003 to investigate seismic behaviour at David Glacier,$\backslash$na large outlet glacier that drains 4{\%} of East Antarctica's ice sheet$\backslash$ninto the Ross Sea. We identify about 20,000 seismic events that are$\backslash$nlarger in magnitude and duration than typical for glacial sources$\backslash$nand repeat at regular intervals of about 25 min. These events are$\backslash$nconsistent with stick-slip behaviour of debris-laden ice moving over$\backslash$na single obstacle of rough bedrock, modulated by relatively small$\backslash$nstress changes from the ocean tides. In the years before and after$\backslash$nthe interval of repeating events, seismic events with irregular and$\backslash$ngenerally longer intervals were detected at the same location, and$\backslash$nare consistent with combined stick-slip and continuous sliding of$\backslash$nthe subglacial interface. We suggest that the observed transitions$\backslash$nin seismicity patterns capture the dynamic behaviour of the ice stream,$\backslash$nand that-despite lower ice-flow velocities-sliding in the stick-slip$\backslash$nregime enhances subglacial erosion.},
author = {Zoet, Lucas K. and Anandakrishnan, Sridhar and Alley, Richard B. and Nyblade, Andrew a. and Wiens, Douglas a.},
doi = {10.1038/ngeo1555},
file = {:home/ben/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Zoet et al. - 2012 - Motion of an Antarctic glacier by repeated tidally modulated earthquakes.pdf:pdf},
isbn = {1752-0894},
issn = {1752-0894},
journal = {Nature Geoscience},
number = {9},
pages = {623--626},
publisher = {Nature Publishing Group},
title = {{Motion of an Antarctic glacier by repeated tidally modulated earthquakes}},
url = {http://dx.doi.org/10.1038/ngeo1555},
volume = {5},
year = {2012}
}
