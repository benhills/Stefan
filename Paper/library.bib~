@article{Nye1973,
abstract = {Surface-energy considerations (Smith, 1948), together with the recent measurements of dihedral angle by KLetcham and Hobbs (1969), lead to the conclusion that in pure polycrystalline ice in equilibrium at the melting point the water phase is situated in channels at three-grain intersections. The channels join together in fours at the four-grain intersections in tetrahedra having concave non-spherical faces. Observations by Professor R. L. Shreve and the authors support this conclusion, which is contrary to the view of Steinemann (1958[a], îb]), and which implies that ice at the melting point is permeable to water. Subject to a reservation about the possible influence of impurities, one may conclude that a temperate glacier is filled with a three-dimensional network of veins of water between the grains. The water flows downwards, replenished by melt water from the surface and by melt produced by heat of deformation within the glacier, at a rate that depends on the fractional volume occupied by the water. This can adjust itself to carry the flow supplied; kinematic waves with sharp shock fronts wilt therefore be possible. The most important function of the vein system may be that it provides an efficient means of flushing impurities into and out of the glacier.},
author = {Nye, J F and Frank, F C},
journal = {Symposium on the Hydrology of Glaciers},
number = {1},
pages = {157--161},
title = {{Hydrology of the Intergranular Veins in a Temperate Glacier}},
url = {http://ks360352.kimsufi.com/redbooks/a095/iahs{\{}{\_}{\}}095{\{}{\_}{\}}0157.pdf},
volume = {0},
year = {1973}
}
