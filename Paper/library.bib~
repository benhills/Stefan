@article{Alley2005,
abstract = {Sufficiently deep water-filled fractures can penetrate even cold ice-sheet ice, but glaciogenic stresses are typically smaller than needed to propagate water-filled fractures that are less than a few tens of meters deep, as shown by our simplified analytical treatment based on analogous models of magmatic processes. However, water-filled fractures are inferred to reach the bed of Greenland through {\{}{\textgreater}{\}}1 km of ice and then collapse to form moulins, which are observed. Supraglacial lakes appear especially important among possible crack 'nucleation' mechanisms, because lakes can warm ice, supply water, and increase the pressure driving water flow and ice cracking.},
author = {Alley, Richard B and Dupont, Todd K and Parizek, Byron R and Anandakrishnan, Sridhar},
