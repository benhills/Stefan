@article{Maohuan1990,
abstract = {To date, the temperatures of 22 glaciers in China have been measured. It is suggested that the minimum temperatures at the base of the active layer in the upper part of the ablation area (T{\_}min) be used as a characteristic temperature and compared with mean annual air temperature (T{\_}a). The temperature distribution is discussed for various glaciers. Polar-type glaciers are characterized by low temperatures with T{\_}min {\textless} -10C, T{\_}min close to T{\_}a, and a cold base in general; sub-polar-type glaciers with -10C {\textless} T{\_}min {\textless} -1.0C, Tmin higher than T{\_}a, and a melting base are usually located beneath the middle of the ablation area; and temperate-type glaciers with T{\_}min{\textgreater}-1.0C, certaintly higher than T{\_}a, and a sub-freezing near-surface layer in the ablation area all the year round, because the snow cover is thinner in winter.},
